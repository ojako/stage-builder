//- pre {$ $ctrl | json $}
.row
  .col-xs-12
    .challenge-stage-helper
      stage-build-helper(helper-object-current-stage="$ctrl.helperObjectCurrentStage", helper-object-stages="$ctrl.helperObjectStages")
.row
  .col-xs-12
    .challenge-stages-container
      //- Indicator line
      //- .challenge-stages-line
      //- .col-xs-6
      //-   pre {$ $ctrl.deletedStages | json $}
      //- .col-xs-6
      //-   pre {$ $ctrl.currentStages | json $}
      .challenge-stages-header.sticky.clearfix
        button.btn.btn-warning(ng-show="$ctrl.deletedStages.length > 0", ng-click="$ctrl.undoDelete()") Undo Remove {$ $ctrl.deletedStages[0].name $} ({$ $ctrl.deletedStages.length $})
        //- Start stage add
        stage-builder-menu(on-add-stage="$ctrl.addStage(type, $index)", stage-types="$ctrl.stageTypes", stage-index="$index")
        span.pull-right
          button.btn.btn-success Validated #[i.fa.fa-check]
          button.btn.btn-default Next Step

      //- Start stage
      .challenge-stages-start(ng-click="$ctrl.inspectorTabActive = 1") #[i.fa.fa-trophy] Capture
      .text-center
        //- Transition stage
        //- .challenge-transition-stage.text-center.sortable-ignored
        //-   |  Manually Closes

      //- Challenge list
      ul.list-unstyled.challenge-stage-list-container(
        ng-sortable="{animation: 250}")
        li.challenge-stage-list-item(ng-repeat="stage in $ctrl.currentStages")
          stage-detail(
            stage="stage"
            last="$last"
            on-delete="$ctrl.deleteStage(stage)"
            stage-types="$ctrl.stageTypes"
            inspector-tab="$ctrl.inspectorTabActive"
            ng-class="{'selected': $ctrl.selectedStage === stage}"
            add-stage="$ctrl.addStage(type, $index)"
            stage-index="$index"
          )

      //- End stage
      .challenge-stages-end(ng-click="$ctrl.inspectorTabActive = 2")
        | #[i.fa.fa-flag-checkered] Measure
  
