.row
  section.col-xs-12
    .form-group
      h2.text-center {$ vm.challenge.title $}
      
.row
  .disco-filter-top.challenge-sticky-header.sticky.clearfix.text-center
    stage-build-helper(helper-object-current-stage="$ctrl.helperObjectCurrentStage", helper-object-stages="$ctrl.helperObjectStages", help-open="vm.helpOpen", help-object="vm.helperObject" current-page="'challengeBuilder'")
    buton.btn.btn-link.pull-left(ng-click="vm.helpOpen = !vm.helpOpen") {$ vm.helpOpen ? 'Close' : 'Open' $} Help #[i.fa.fa-question]
    span
      ul.pagination
        li #[a #[i.fa.fa-chevron-left]]
        li #[a Design]
        li.active #[a Flow]
        li #[a Publish]
        li #[a #[i.fa.fa-chevron-right]]

.row
  .col-xs-12
    stage-builder(users="vm.users", challenge="vm.challenge", stage-types="vm.stageTypes", progression-types="vm.progressionTypes")
